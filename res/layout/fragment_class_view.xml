<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.csulb.android.smartbook.views.ClassViewFragment" >

    <TextView
        android:id="@+id/txtProfName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtProfDep"
        android:layout_alignTop="@+id/imgProfessor"
        android:text="@string/example_professor" />

    <TextView
        android:id="@+id/txtClassCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/class_code_example"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtClassCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/class_name_example"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgProfessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtClassName"
        android:layout_below="@+id/txtClassName"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="23dp"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txtProfContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtProfDep"
        android:layout_alignLeft="@+id/txtProfName"
        android:text="@string/prof_contact_example" />

    <TextView
        android:id="@+id/txtProfDep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProfessor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/department_example" />

    <TextView
        android:id="@+id/txtSectionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtClassName"
        android:layout_below="@+id/txtProfDep"
        android:layout_marginTop="50dp"
        android:text="@string/section_information_header" />

    <TextView
        android:id="@+id/txtSectionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSectionHeader"
        android:layout_below="@+id/txtSectionHeader"
        android:layout_marginTop="15dp"
        android:text="@string/section_info_example" />

</RelativeLayout>
